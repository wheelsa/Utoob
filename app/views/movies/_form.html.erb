
<%= form_with(model: @movie, local: true) do |f| %>
  <div class="field">
    <%= f.label :title %>
    <%= f.text_field :title, required: true, autofocus: true, placeholder:
    "Movie Title" %>
  </div>
  <div class="field">
    <%= f.label :duration %>
    <%= f.text_field :duration, required: true, placeholder: 'Duration "xhr xxmin"' %>
  </div>
   <div class="field">
    <%= f.label :genre %>
    <%= f.text_field :genre, required: true, placeholder: "Genre" %>
  </div>
   <div class="field">
    <%= f.label :description %>
    <%= f.text_field :description, required: true, placeholder: "Description" %>
  </div>
   <div class="field">
    <%= f.label :trailer %>
    <%= f.text_field :trailer, required: true, placeholder: "Movie Trailer" %>
  </div>
  <%= f.submit nil, class: "ui green button inverted" %>

  <%end%>
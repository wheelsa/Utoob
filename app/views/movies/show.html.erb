<h1>Top Movies</h1>
	<%= link_to 'Back to all Movies', movies_path %>
   <br />
   <br />

 <h2 ><%= @movie.title %></h2>
  <img class="responsive-img" src="<%=movie.image%>">
  <p><%= "duration: #{@movie.duration}" %></p>
  <p><%= "Genre: #{@movie.genre}" %></p>
  <p><%= "Description: #{@movie.description}" %></p>
  <br />
  <h3> Trailer </h3>
  <iframe width="560" height="315" src="<%=@movie.trailer%>" allowfullscreen></iframe>

<%= link_to 'Add Comment', new_movie_comment_path(@movie)%>

  <br />

  <hr>
   <p> <%= link_to "Edit Movie", edit_movie_path(@movie)%></p>
  <p> <%= link_to movie_path(@movie), method: :delete do %>
    Delete

    </p>
<% end %>


<hr />

<ul>
    <% @movie.comments.each do |comment|%>
      <li>
        <h3><%=comment.user.email%> </h3>
        <h3><%=comment.body%> </h3>
        <%= link_to 'Remove', movie_comment_path(@movie, comment), method: :delete %>
        <br />
      </li>
    <%end%>
</ul>

